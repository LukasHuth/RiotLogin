<Window x:Class="LeagueLogin.Add_Account"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LeagueLogin"
        mc:Ignorable="d"
        Title="Add_Account" Height="200" Width="200"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Height="25px" Width="170px" Name="Alias" />
        <TextBox Grid.Row="1" Height="25px" Width="170px" Name="Username" />
        <PasswordBox Grid.Row="2" Height="25px" Width="170px" Name="Password" />
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="65px" Height="35px" Content="OK" Name="ok_button"/>
            <Button Grid.Column="1" Width="65px" Height="35px" Content="Cancel" Name="cancel_button"/>
        </Grid>
    </Grid>
</Window>
